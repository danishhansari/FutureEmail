generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  name String
  email String @unique
  password String
  Emails Email[]
}

model Email{
  id String @id @default(uuid())
  body String
  date DateTime
  owner User @relation(fields: [postId], references: [id])
  postId String
}