{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [{ "source": "/(.*)", "destination": "/" }],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://backend.dan72mail.workers.dev/api/$1",
      "headers": {
        "x-forwarded-host": "futureemail.vercel.app"
      }
    }
  ],
  "env": {
    "VITE_SERVER": "https://backend.dan72mail.workers.dev"
  }
}
